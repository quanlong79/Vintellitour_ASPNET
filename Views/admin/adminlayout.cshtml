@* //fix *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - VintelliTour Admin</title>

    <!-- Link tới CSS site của bạn nếu có -->
    <link href="~/css/site.css" rel="stylesheet" />

    <!-- Thêm Tailwind CSS CDN (chỉ dùng cho dev/test nhanh, production nên build Tailwind) -->
    <script src="https://cdn.tailwindcss.com"></script>

    @* Nếu bạn cần thêm js, css khác thì thêm ở đây *@

</head>
<body class="flex min-h-screen bg-gray-100">

    <!-- Sidebar -->
    <aside class="w-64 bg-white min-h-screen flex flex-col border-r">
        <div class="p-4 bg-teal-100 rounded-md mx-3 mt-4 mb-6">
            <h2 class="text-sm font-semibold uppercase tracking-wide text-teal-900">Navigation</h2>
        </div>

        <nav class="flex flex-col px-2 space-y-1">
            <a href="/admin/dashboard" class="flex items-center gap-2 px-4 py-2 rounded-md hover:bg-teal-50 text-gray-700 hover:text-teal-700 transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M3 13h18M3 6h18M3 20h18"></path>
                </svg>
                Dashboard
            </a>
            <a href="/admin/locations" class="flex items-center gap-2 px-4 py-2 rounded-md hover:bg-teal-50 text-gray-700 hover:text-teal-700 transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                </svg>
                Quản lý địa điểm
            </a>
            <a href="/admin/posts" class="flex items-center gap-2 px-4 py-2 rounded-md hover:bg-teal-50 text-gray-700 hover:text-teal-700 transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M3 12h18M6 16h2M10 8h2M14 12h2"></path>
                </svg>
                Quản lý bài đăng
            </a>
            <a href="/admin/users" class="flex items-center gap-2 px-4 py-2 rounded-md hover:bg-teal-50 text-gray-700 hover:text-teal-700 transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="7" r="4"></circle>
                    <path d="M5.5 21a6.5 6.5 0 0 1 13 0"></path>
                </svg>
                Quản lý người dùng
            </a>
        </nav>

        <div class="mt-auto p-4 flex items-center gap-3 border-t">
            <div class="w-10 h-10 rounded-full bg-teal-600 text-white flex items-center justify-center font-semibold">A</div>
            <div>
                <div class="text-sm font-semibold">admin</div>
                <div class="text-xs text-gray-500">admin@example.com</div>
            </div>
            <button class="ml-auto p-1 hover:bg-gray-200 rounded-full" title="More options">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="5" r="1"></circle>
                    <circle cx="12" cy="12" r="1"></circle>
                    <circle cx="12" cy="19" r="1"></circle>
                </svg>
            </button>
        </div>
    </aside>

    <!-- Main content area -->
    <div class="flex-1 flex flex-col min-h-screen">
        <!-- Header -->
        <header class="flex items-center gap-2 border-b px-6 h-14 bg-white">
            <button type="button" class="lg:hidden">
                <!-- Hamburger menu icon -->
                <svg class="w-6 h-6 text-green-900" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>

            <h1 class="text-base font-medium text-green-900">Welcome to the admin of VintelliTour</h1>

            <div class="ml-auto flex items-center gap-2">
                <a href="https://github.com/minhloc289/VintelliTour" target="_blank" rel="noopener noreferrer"
                   class="inline-flex items-center gap-2 px-4 py-2 text-white font-semibold bg-teal-700 rounded-xl border border-teal-300 hover:bg-teal-600 hover:shadow-md transition duration-300">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2C6.477 2 2 6.477 2 12C2 16.418 4.865 20.166 8.839 21.489C9.339 21.581 9.521 21.284 9.521 21.021C9.521 20.784 9.513 20.133 9.508 19.289C6.726 19.882 6.139 17.891 6.139 17.891C5.685 16.735 5.029 16.439 5.029 16.439C4.132 15.798 5.095 15.81 5.095 15.81C6.089 15.88 6.616 16.852 6.616 16.852C7.5 18.423 8.969 17.938 9.539 17.683C9.631 17.029 9.889 16.545 10.175 16.26C7.954 15.972 5.62 15.085 5.62 11.333C5.62 10.249 6.01 9.358 6.636 8.659C6.533 8.409 6.186 7.406 6.736 6.061C6.736 6.061 7.566 5.795 9.497 7.061C10.2958 6.83886 11.1246 6.72614 11.959 6.726C12.792 6.73 13.646 6.853 14.42 7.061C16.349 5.794 17.179 6.061 17.179 6.061C17.729 7.406 17.384 8.409 17.279 8.659C17.908 9.358 18.294 10.249 18.294 11.333C18.294 15.095 15.955 15.969 13.728 16.252C14.081 16.598 14.394 17.281 14.394 18.334C14.394 19.836 14.383 20.691 14.383 21.021C14.383 21.286 14.562 21.585 15.072 21.488C19.042 20.162 21.904 16.417 21.904 12C21.904 6.477 17.428 2 12 2Z" />
                    </svg>
                    GitHub
                </a>
            </div>
        </header>

        <!-- Main content -->
        <main class="flex-1 p-4 overflow-auto">
            @RenderBody()
        </main>
    </div>

</body>
</html>
