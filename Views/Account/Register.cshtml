@model Vintellitour_Framework.Models.RegisterModel

@{
    ViewData["Title"] = "Tạo tài khoản mới";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-blue-50 to-white">
    <div class="max-w-4xl w-full space-y-8 bg-white shadow-xl rounded-2xl p-8 border border-slate-200">
        <div class="text-center">
            <img src="~/img/Logo_merus.png" alt="Logo" class="mx-auto w-40 h-auto " width="160" height="30" />
            <h2 class="mt-6 text-3xl font-bold text-gray-800">
                Tạo tài khoản mới
            </h2>
            <p class="mt-2 text-sm text-gray-600">
                Điền thông tin của bạn để bắt đầu hành trình với chúng tôi
            </p>
        </div>

        <form class="mt-8" method="post" action="@Url.Action("Register", "Account")">
            @if (ViewData["Error"] != null)
            {
                <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-md mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-red-700">@ViewData["Error"]</p>
                        </div>
                    </div>
                </div>
            }
            @if (ViewData["Success"] != null)
            {
                <div class="bg-green-50 border-l-4 border-green-500 p-4 rounded-md mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-green-700">Đăng ký thành công!</p>
                        </div>
                    </div>
                </div>
            }

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="relative">
                    <label for="username" class="block text-sm font-medium text-gray-700 mb-1">
                        Tên người dùng
                    </label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <input id="username"
                               name="username"
                               type="text"
                               asp-for="Username"
                               class="appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out sm:text-sm"
                               placeholder="Nhập tên người dùng" />
                        <span asp-validation-for="Username" class="text-red-500"></span>
                    </div>
                </div>

                <div class="relative">
                    <label for="email-address" class="block text-sm font-medium text-gray-700 mb-1">
                        Email
                    </label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <input id="email-address"
                               name="email"
                               type="email"
                               asp-for="Email"
                               class="appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out sm:text-sm"
                               placeholder="Nhập email của bạn" />
                        <span asp-validation-for="Email" class="text-red-500"></span>
                    </div>
                </div>

                <div class="relative">
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
                        Mật khẩu
                    </label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <input id="password"
                               name="password"
                               type="password"
                               asp-for="Password"
                               class="appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out sm:text-sm"
                               placeholder="Nhập mật khẩu" />
                        <span asp-validation-for="Password" class="text-red-500"></span>
                    </div>
                </div>

                <div class="relative">
                    <label for="confirm-password" class="block text-sm font-medium text-gray-700 mb-1">
                        Xác nhận mật khẩu
                    </label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <input id="confirm-password"
                               type="password"
                               asp-for="ConfirmPassword"
                               class="appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out sm:text-sm"
                               placeholder="Nhập lại mật khẩu" />
                        <span asp-validation-for="ConfirmPassword" class="text-red-500"></span>
                    </div>
                </div>
            </div>

            <div class="mt-6 p-4 bg-blue-50 rounded-lg">
                <h3 class="text-sm font-medium text-blue-800 mb-2">Yêu cầu về mật khẩu:</h3>
                <ul class="list-disc pl-5 space-y-1 text-xs text-blue-700">
                    <li>Mật khẩu phải có ít nhất 8 ký tự</li>
                    <li>Phải có ít nhất một chữ cái viết hoa và một chữ cái viết thường</li>
                    <li>Phải có ít nhất một số và một kí tự đặc biệt</li>
                </ul>
            </div>

            <div class="mt-6 flex items-center">
                <input id="terms-agreement"
                       name="TermsAgreement"
                       type="checkbox"
                       asp-for="TermsAgreement"
                       class="h-5 w-5 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                <label for="terms-agreement" class="ml-3 block text-sm text-gray-700">
                    Tôi đồng ý với
                    <a href="/uploads/Điều Khoản và Điều Kiện của VintelliTour.pdf" class="font-medium text-blue-600 hover:text-blue-500 underline" target="_blank">
                        Điều khoản và Điều kiện
                    </a>
                </label>
            </div>
            <span asp-validation-for="TermsAgreement" class="text-red-500"></span>

            <div class="mt-8">
                <button type="submit"
                        class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-lg hover:shadow-xl">
                    Tạo tài khoản
                </button>
            </div>

            <div class="text-center mt-6">
                <p class="text-sm text-gray-600">
                    Đã có tài khoản?
                    <a href="/account/login" class="font-medium text-blue-600 hover:text-blue-500 transition-colors duration-200">
                        Đăng nhập tại đây
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>
